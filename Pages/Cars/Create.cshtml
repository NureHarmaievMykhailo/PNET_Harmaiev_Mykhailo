@page
@model AutoWorkshopWeb.Pages.Cars.CreateModel

<h1>Додати автомобіль</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Car.ClientId"></label>
        <select asp-for="Car.ClientId" class="form-control" asp-items="Model.Clients"></select>
        <span asp-validation-for="Car.ClientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Car.LicensePlate"></label>
        <input asp-for="Car.LicensePlate" class="form-control" />
        <span asp-validation-for="Car.LicensePlate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Car.Brand"></label>
        <input asp-for="Car.Brand" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Car.Model"></label>
        <input asp-for="Car.Model" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Car.Year"></label>
        <input asp-for="Car.Year" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Зберегти</button>
    <a asp-page="Index" class="btn btn-secondary mt-2">Назад</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}