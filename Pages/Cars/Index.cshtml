@page
@model AutoWorkshopWeb.Pages.Cars.IndexModel

<h1>Автомобілі</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Додати авто</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Номер</th>
        <th>Марка</th>
        <th>Модель</th>
        <th>Рік</th>
        <th>Клієнт</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var car in Model.CarList)
    {
        <tr>
            <td>@car.LicensePlate</td>
            <td>@car.Brand</td>
            <td>@car.Model</td>
            <td>@car.Year</td>
            <td>@car.Client?.FullName</td>
            <td>
                <a asp-page="Edit" asp-route-id="@car.CarId">Edit</a> |
                <a asp-page="Details" asp-route-id="@car.CarId">Details</a> |
                <a asp-page="Delete" asp-route-id="@car.CarId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>