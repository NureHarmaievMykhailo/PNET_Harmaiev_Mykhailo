@page
@model AutoWorkshopWeb.Pages.Logs.IndexModel

<h1>Журнал змін</h1>

<form method="get" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-md-3">
            <label class="form-label">Тип операції:</label>
            <select name="operationType" class="form-select">
                <option value="">Усі</option>
                <option value="Create">Create</option>
                <option value="Edit">Edit</option>
                <option value="Delete">Delete</option>
                <option value="Delete">Update</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">З дати:</label>
            <input type="date" name="fromDate" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">До дати:</label>
            <input type="date" name="toDate" class="form-control" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Фільтрувати</button>
            <a asp-page="Index" class="btn btn-secondary">Скинути</a>
        </div>
    </div>
</form>

<form method="post">
    <button type="submit" asp-page-handler="Clear" class="btn btn-danger mb-3">Очистити логи</button>
</form>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>Дата</th>
        <th>Тип операції</th>
        <th>Повідомлення</th>
        <th>Послуга</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var log in Model.Logs)
    {
        <tr>
            <td>@log.LogDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@log.OperationType</td>
            <td>@log.Message</td>
            <td>@log.Service?.Name</td>
        </tr>
    }
    </tbody>
</table>