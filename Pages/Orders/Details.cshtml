@page "{id:int}"
@model AutoWorkshopWeb.Pages.Orders.DetailsModel

<h1>Інформація про замовлення</h1>

<dl class="row">
    <dt class="col-sm-2">Авто</dt>
    <dd class="col-sm-10">@Model.Order?.Car?.LicensePlate</dd>

    <dt class="col-sm-2">Клієнт</dt>
    <dd class="col-sm-10">@Model.Order?.Car?.Client?.FullName</dd>

    <dt class="col-sm-2">Послуга</dt>
    <dd class="col-sm-10">@Model.Order?.Service?.Name</dd>

    <dt class="col-sm-2">Кількість</dt>
    <dd class="col-sm-10">@Model.Order?.Quantity</dd>

    <dt class="col-sm-2">Дата</dt>
    <dd class="col-sm-10">@Model.Order?.OrderDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Статус</dt>
    <dd class="col-sm-10">@Model.Order?.Status</dd>
</dl>

<a asp-page="Edit" asp-route-id="@Model.Order?.OrderId" class="btn btn-primary">Редагувати</a>
<a asp-page="Index" class="btn btn-secondary">Назад</a>