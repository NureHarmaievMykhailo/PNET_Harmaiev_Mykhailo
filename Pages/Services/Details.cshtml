@page "{id:int}"
@model AutoWorkshopWeb.Pages.Services.DetailsModel

<h1>Інформація про послугу</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Назва</dt>
        <dd class="col-sm-10">@Model.Service?.Name</dd>

        <dt class="col-sm-2">Ціна</dt>
        <dd class="col-sm-10">@Model.Service?.Price</dd>

        <dt class="col-sm-2">Тривалість</dt>
        <dd class="col-sm-10">@Model.Service?.EstimatedDuration хв</dd>

        <dt class="col-sm-2">Опис</dt>
        <dd class="col-sm-10">@Model.Service?.Description</dd>
    </dl>
</div>

<a asp-page="Edit" asp-route-id="@Model.Service?.ServiceId" class="btn btn-primary">Редагувати</a>
<a asp-page="Index" class="btn btn-secondary">Назад</a>